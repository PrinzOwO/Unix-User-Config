#setenv LANG zh_TW.Big5
#setenv LC_ALL zh_TW.Big5
setenv CLICOLOR
setenv TERM screen
alias ls 'ls -F \!*'
alias ll 'ls -al'

if ($?prompt) then
  if(! $?WINDOW ) then
    set prompt="%{^[[1;36m%}%T%{^[[m%} %{^[[1;33m%}%n%{^[[m%}@%{^[[1;37m%}%m %{^[[1;32m%}[%~]%{^[[m%} \n%{^[[1;35m%}[^_^] %{^[[m%} %#"
  else
    set prompt="%{^[[1;36m%}%t%{^[[m%} %{^[[1;33m%}%n%{^[[m%}@%{^[[1;37m%}%m %{^[[1;32m%}[%~]%{^[[m%} \n%{^[[1;35m%}[W$WINDOW]%{^[[m%} %#"
  endif
  if ($?tcsh) then
    set mail = (/var/mail/$USER)
    bindkey "^W" backward-delete-word
    bindkey -k up history-search-backward
    bindkey -k down history-search-forward
  endif
endif


